{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Package",
  "description": "A Protobuf package which contains services and methods. Maybe originate from multiple schema/n files.",
  "type": "object",
  "properties": {
    "config": {
      "description": "Configuration of `protomd` and not part of the schema definition.",
      "$ref": "#/$defs/Conf"
    },
    "name": {
      "description": "The package name.",
      "type": "string"
    },
    "services": {
      "description": "List of services defined in the package.",
      "type": "array",
      "items": {
        "$ref": "#/$defs/Service"
      }
    }
  },
  "required": [
    "config",
    "name",
    "services"
  ],
  "$defs": {
    "Conf": {
      "description": "Configuration for the protomd Protobuf Markdown generator.",
      "type": "object",
      "properties": {
        "frontmatter": {
          "description": "Optional frontmatter to place at the beginning of each generated file./n/n For example, in Vitepress you can configure the outline level for the navigation sidebar by/n adding the following configuration as frontmatter:/n/n frontmatter = /"outline: [2, 4]/"",
          "type": "string"
        },
        "markdownlint": {
          "description": "Configuration for `markdownlint`.",
          "$ref": "#/$defs/Markdownlint"
        },
        "request_symbols": {
          "description": "Symbols used to define the gRPC method type in templates./n/n Note that these are always encapsulated in backticks to better highlight them in the/n resulting Markdown, therefore HTML.",
          "$ref": "#/$defs/RequestSymbols"
        }
      },
      "required": [
        "frontmatter",
        "markdownlint",
        "request_symbols"
      ]
    },
    "Markdownlint": {
      "type": "object",
      "properties": {
        "disable": {
          "description": "List of rules to disable.",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "disable"
      ]
    },
    "RequestSymbols": {
      "description": "Symbols, as in any kind of textual identifier, to describe the different kinds of gRPC calls.",
      "type": "object",
      "properties": {
        "unary": {
          "type": "string"
        },
        "client_streaming": {
          "description": "Client-side streaming.",
          "type": "string"
        },
        "server_streaming": {
          "description": "Server-side streaming.",
          "type": "string"
        },
        "bidi_streaming": {
          "description": "Bidirectional (both client- and server-side) streaming.",
          "type": "string",
          "default": "bidirectional streaming"
        }
      },
      "required": [
        "unary",
        "client_streaming",
        "server_streaming"
      ]
    },
    "Service": {
      "description": "A gRPC service as part of a package.",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the gRPC service.",
          "type": "string"
        },
        "name": {
          "description": "Name of the gRPC service.",
          "type": "string"
        },
        "methods": {
          "description": "List of methods the service provides.",
          "type": "array",
          "items": {
            "$ref": "#/$defs/Method"
          }
        }
      },
      "required": [
        "name",
        "description",
        "methods"
      ]
    },
    "Method": {
      "description": "A gRPC method as part of a service.",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the method.",
          "type": "string"
        },
        "name": {
          "description": "Name of the method.",
          "type": "string"
        },
        "input": {
          "description": "Input method parameter to the method call.",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/Message"
          }
        },
        "output": {
          "description": "Output message parameter to the method call.",
          "type": "object",
          "additionalProperties": {
            "$ref": "#/$defs/Message"
          }
        },
        "client_streaming": {
          "description": "Whether this method uses client-side streaming.",
          "type": "boolean"
        },
        "server_streaming": {
          "description": "Whether this method uses server-side streaming.",
          "type": "boolean"
        }
      },
      "required": [
        "name",
        "description",
        "input",
        "output",
        "client_streaming",
        "server_streaming"
      ]
    },
    "Message": {
      "description": "A Protobuf message, referenced by a method as parameter or nested within.",
      "type": "object",
      "properties": {
        "description": {
          "description": "Description of the message.",
          "type": "string"
        },
        "proto": {
          "description": "Raw Protobuf schema definition.",
          "type": "string"
        }
      },
      "required": [
        "description",
        "proto"
      ]
    }
  }
}
